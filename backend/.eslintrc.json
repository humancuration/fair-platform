{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    // Add or override rules as needed
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-console": "warn", // Added rule to warn on console statements
    "indent": ["error", 2] // Enforce consistent indentation
  }
}